@{
    ViewData["TituloPagina"] = "Cadastrar Produto";
    ViewData["ClasseBody"] = "hold-transition register-page";
    Layout = "_LayoutDashboard";
}
<div class="row">
    <!-- left column -->
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Cadastrar Produto</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form role="form" id="f-cadastrar">
                <div class="card-body">
                    <div class="form-group">
                        <label for="i-desc"><b style="color:red">*</b> Descrição</label>
                        <input type="text" class="form-control" id="i-desc" placeholder="Insira a descrição">
                    </div>
                    <div class="form-group">
                        <label for="i-categ"><b style="color:red">*</b> Categoria</label>
                        <input type="text" class="form-control" id="i-categ" placeholder="Insira a categoria">
                    </div>
                    <div class="form-group">
                        <label for="i-brand"><b style="color:red">*</b> Marca</label>
                        <input type="text" class="form-control" id="i-brand" placeholder="Insira a marca">
                    </div>
                    <div class="form-group">
                        <label for="i-valor-compra"><b style="color:red">*</b> Valor de Compra</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">R$</span>
                            </div>
                            <input type="text" class="form-control" id="i-valor-compra" placeholder="Insira o valor de compra">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="i-valor-venda"><b style="color:red">*</b> Valor de Compra</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">R$</span>
                            </div>
                            <input type="text" class="form-control" id="i-valor-venda" placeholder="Insira o valor de venda">
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="button" class="btn btn-default" onclick="FLNProduto.telaConsultar()">Cancelar</button>
                    <button type="button" class="btn btn-primary" onclick="FLNProduto.limpar('f-cadastrar')">Limpar</button>
                    <button type="button" class="btn btn-success float-right" onclick="FLNProduto.cadastrar()">Cadastrar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles
{
      <link rel="stylesheet" href="~/adminlte3/plugins/toastr/toastr.min.css">
}

@section Scripts
{
    <script type="module" src="~/flncontrol/js/Produto.js"></script>
    <script src="~/adminlte3/plugins/toastr/toastr.min.js"></script>
}
