@{
    ViewData["TituloPagina"] = "Alterar Produto";
    ViewData["ClasseBody"] = "hold-transition register-page";
    Layout = "_LayoutDashboard";
}
<div class="row">
    <!-- left column -->
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Visualizar Produto: @ViewBag.Produto.Id - @ViewBag.Produto.Descricao </h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form role="form" id="f-cadastrar">
                <div class="card-body">
                    <input type="hidden" value="@ViewBag.Produto.Id" id="i-prod-codigo"/>
                    <div class="form-group">
                        <label for="i-desc">Descrição</label>
                        <input type="text" class="form-control" id="i-desc" value="@ViewBag.Produto.Descricao">
                    </div>
                    <div class="form-group">
                        <label for="i-categ">Categoria</label>
                        <input type="text" class="form-control" id="i-categ" value="@ViewBag.Produto.Categoria">
                    </div>
                    <div class="form-group">
                        <label for="i-brand">Marca</label>
                        <input type="text" class="form-control" id="i-brand" value="@ViewBag.Produto.Marca">
                    </div>
                    <div class="form-group">
                        <label for="i-valor-compra">Valor de Compra</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">R$</span>
                            </div>
                            <input type="text" class="form-control" id="i-valor-compra" value="@ViewBag.Produto.ValorCompra">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="i-valor-venda">Valor de Compra</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">R$</span>
                            </div>
                            <input type="text" class="form-control" id="i-valor-venda" value="@ViewBag.Produto.ValorVenda">
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="button" class="btn btn-default" onclick="FLNProduto.telaConsultar()">Cancelar</button>
                    <button type="button" class="btn btn-success float-right" onclick="FLNProduto.alterar()">Alterar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles
{
    <link rel="stylesheet" href="~/adminlte3/plugins/toastr/toastr.min.css">
}

@section Scripts
{
    <script type="module" src="~/flncontrol/js/Produto.js"></script>
    <script src="~/adminlte3/plugins/toastr/toastr.min.js"></script>
}
