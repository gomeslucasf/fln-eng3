
@{
    ViewData["Title"] = "Primeiro Acesso";
    ViewData["BodyClass"] = "hold - transition sidebar - mini";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

@section Scripts
{
    <script src="~/js/View/Login/acesso.js"></script>
}

    <!-- Site wrapper -->
    <!-- Navbar -->

    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-4">
                    <h1>Primeiro Acesso</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <form>
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Informações</h3>
                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="col-6">
                                <label for="nomeForm">Nome Usuário *</label>
                                <input type="text" id="inputName" class="form-control required">
                            </div>
                            <div class="col-6">
                                <label for="loginForm">Login Usuário *</label>
                                <input type="text" id="inputLogin" class="form-control required">
                            </div>
                            <div class="col-4">
                                <label for="senhaForm">Senha Usuário *</label>
                                <input type="password" id="inputSenha" class="form-control required">
                            </div>
                            <div class="col-4">
                                <label for="cpfForm">CPF *</label>
                                <input type="text" id="inputCPF" class="form-control required" placeholder="000.000.000-00">
                            </div>
                            <div class="col-4">
                                <label for="rgForm">RG *</label>
                                <input type="text" id="inputRG" class="form-control required">
                            </div>
                            <div class="col-4">
                                <label for="dataNascForm">Data Nasc. *</label>
                                <input type="date" id="inputDataNasc" class="form-control required" onblur="mascaraDeData(this)" placeholder="dd/mm/aaaa">
                            </div>
                            <div class="col-4">
                                <label for="telForm">Telefone *</label>
                                <input type="text" id="inputTelefone" class="form-control required" onblur="mascaraDeTelefone(this)" placeholder="(99)99999-9999">
                            </div>
                            <div class="col-4">
                                <label for="emailForm">Email *</label>
                                <input type="text" id="inputEmail" class="form-control required">
                            </div>
                            <div class="col-4">
                                <label for="cargoForm">Cargo *</label>
                                <select class="form-control custom-select" id="cargoSelected">
                                    <option selected disabled>Selecione</option>
                                    <option>Gerente</option>
                                    <option>Vendedor</option>
                                </select>
                            </div>
                            <div class="col-4">
                                <label for="statusForm">Status *</label>
                                <select class="form-control custom-select" id="statusSelected">
                                    <option selected disabled>Selecione</option>
                                    <option>Ativo</option>
                                    <option>Desativo</option>
                                </select>
                            </div>
                            <div class="col-4">
                                <label for="nivelForm">Nivel de Acesso *</label>
                                <select class="form-control custom-select" id="nivelSelected">
                                    <option selected disabled>Selecione</option>
                                    <option>Total</option>
                                    <option>Restrito</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <input type="button" value="Cadastrar Acesso" class="btn btn-outline-primary float-right" onclick="gravarPrimeiroAcesso()">
            </div>
        </div>
    </form>
    <p>&nbsp;</p>
    <p id="validate_message">&nbsp;</p>
    <p>&nbsp;</p>
    <!-- /.content -->
    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
    </aside>
    <!-- /.control-sidebar -->
    <!-- ./wrapper -->